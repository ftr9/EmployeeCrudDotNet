@model EmployeeCrud.Models.Entity.Employee;


<form method="post">
    <div class="form-group">
        <label for="Name">Employee Name</label>
        <input type="hidden" asp-for="Id" class="form-control" name="Id" id="Id" placeholder="Enter Id">
    </div>
    <div class="form-group">
        <label for="Name">Employee Name</label>
        <input type="text" asp-for="Name" class="form-control" name="Name" id="Name" placeholder="Enter Name">
    </div>

    <div class="form-group">
        <label for="Name">Employee Name</label>
        <input type="email" asp-for="Email" class="form-control" name="Email" id="Email" placeholder="Enter Email">

    </div>

    <div class="form-group">
        <label for="Name">Enter Salary</label>
        <input type="number" asp-for="Salary" class="form-control" name="Salary" id="Salary" placeholder="Enter Salary">
    </div>

    <div class="form-group">
        <label for="Department">Enter Department</label>
        <input type="text" class="form-control" asp-for="Department" name="Department" id="Salary" placeholder="Enter Salary">
    </div>

    <div class="form-group">
        <label for="Department">Enter DateOfBirth:</label>
        <input type="date" class="form-control" asp-for="DateOfBirth" name="DateOfBirth" id="DateOfBirth" placeholder="Enter DateOfBirth">
    </div>

    <button type="submit" asp-controller="Employeee" asp-action="Details" class="btn btn-primary">Submit</button>
    <button type="submit" asp-controller="Employeee" asp-action="Delete" class="btn btn-danger" >Delete</button>
</form>