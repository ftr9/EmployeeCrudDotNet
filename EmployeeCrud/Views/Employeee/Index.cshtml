@model List<EmployeeCrud.Models.Entity.Employee>
@{
}

<h1>Employees</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Salary</th>
            <th scope="col">DateOfBirth</th>
            <th scope="col" ></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td scope="row">@employee.Id</td>
                <td scope="row">@employee.Name</td>
                <td scope="row">@employee.Email</td>
                <td scope="row">@employee.Salary</td>
                <td scope="row">@employee.DateOfBirth.ToLongDateString()</td>
                <td scope="row"><a href="/Employeee/Details/@employee.Id">View</a></td>
            </tr>
        }
    </tbody>

    </table>